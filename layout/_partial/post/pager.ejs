<% if (post.prev || post.next) { %>
<ul class="pager post-pager">
  <% if (post.next) { %>
    <li class="next">
      <a href="<%- url_for(post.next.path) %>">
        <% if (post.next.title) { %>
          <%= post.next.title %>
        <% } else { %>
          (<%= __('No title') %>)
        <% } %>
      </a>
    </li>
  <% } %>
  <% if (post.prev) { %>
    <li class="prev">
      <a href="<%- url_for(post.prev.path) %>">
        <% if (post.prev.title) { %>
          <%= post.prev.title %>
        <% } else { %>
          (<%= __('No title') %>)
        <% } %>
      </a>
    </li>
  <% } %>
</ul>
<% } %>
