<!DOCTYPE html>
<html itemscope itemtype='http://schema.org/Blog'>
<head prefix='og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# profile: http://ogp.me/ns/profile#'>

  <meta http-equiv='Content-Type' content='text/html; charset=UTF-8'>
  <meta charset='utf-8'>
  <meta content='IE=edge' http-equiv='X-UA-Compatible'>
  <%
  var title = page.title;
  if (is_archive()) {
    title = __('Archive');
    if (is_month()) {
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()) {
      title += ': ' + page.year;
    }
  } else if (is_category()) {
    title = __('Category') + ': ' + page.category;
  } else if (is_tag()) {
    title = __('Tag') + ': ' + page.tag;
  }
  %>
  <title><% if (title) { %><%= title %> | <% } %><%= config.title %></title>
  <meta name='viewport' content='width=device-width'>
  <%- open_graph({twitter_id: config.twitter, twitter_site: config.twitter, google_plus: config.google_plus, fb_admins: config.fb_admins}) %>
  <meta property='profile:first_name' content='<%= config.first_name %>'>
  <meta property='profile:last_name' content='<%= config.last_name %>'>
  <meta property='profile:gender' content='<%= config.gender %>'>
  <meta property='profile:username' content='<%= config.facebook %>'>
  <% if (config.feed.path) { %><link rel='alternative' href='/<%- config.feed.path %>' title='<%= config.title %>' type='application/atom+xml'><% } %>
  <% if (config.favicon) { %><link rel='icon' href='<%- config.favicon %>'><% } %>
  <%- css('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css') %>
  <%- css('css/site.css') %>
  <%- js('js/loadCSS') %>
  <script type='text/javascript'>
    loadCSS('//fonts.googleapis.com/css?family=Ubuntu:300,500,300italic,500italic&subset=latin,cyrillic');
    loadCSS('//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css');
    <% if (theme.fancybox) { %>loadCSS('<%- url_for('fancybox/jquery.fancybox.css') %>');<% } %>
  </script>
  <!--[if lt IE 9]>
    <script src='//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'></script>
    <script src='//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js'></script>
  <![endif]-->

</head>
